super + alt + m
    st -e dmenu-read-man
super + alt + h
    st -e bash -c '$HOME/.local/scripts/dmenu-exec-history; read -p ""'
super + alt + t
    st -e bash -c '$HOME/.local/scripts/dmenu-tldr; read -p ""'
super + alt + c
    st -e dmenu-open-config

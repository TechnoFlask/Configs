#!/bin/bash

alias la="exa -al --group-directories-first"
alias li="la -i"

alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias cp="cp -iv"
alias mv="mv -iv"
alias df="df -h"
alias du="du -sh"
alias clear='/usr/bin/clear; echo; seq $(tput cols) | shuf | spark | lolcat; echo'
alias free="free -h"
alias lsblk="lsblk -e 7"
alias losetup="losetup -a | sort"
alias ip="ip -c"
alias ln="ln -v"
alias xargs="xargs -t"

alias nv="nvim"
alias neov="neovide"
alias py="/usr/bin/python3.12"
alias nf="neofetch"
alias btop="/usr/bin/btop --utf-force"
alias k.="kitty . & disown"
# alias yarn="yarn --use-yarnrc $XDG_CONFIG_HOME/yarn/config"
alias nmcli="nmcli -p"
alias fzf="find . -type f | /usr/bin/fzf"
alias quartus="$HOME/intelFPGA_lite/23.1std/quartus/bin/quartus"
alias bat="/usr/bin/bat --theme=Visual\ Studio\ Dark+"

alias update="sudo pacman -Syu && paru -Syu"
alias pacinstall="sudo pacman -S"
alias pacsearch="sudo pacman -Fy"
alias aurinstall="paru -S"
alias cleanup="sudo pacman -Rns (pacman -Qtdq)"

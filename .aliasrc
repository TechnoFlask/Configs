#!/bin/bash

alias la="exa -al --group-directories-first"
alias li="la -i"

alias grep="command grep --color=auto"
alias diff="command diff --color=auto"
alias cp="command cp -iv"
alias mv="command mv -iv"
alias df="command df -h"
alias du="command du -sh"
alias clear="command clear; echo; seq $(tput cols) | shuf | spark | lolcat; echo; echo"
alias free="command free -h"
alias lsblk="command lsblk -e 7"
alias losetup="command losetup -a | sort"
alias ip="command ip -c"
alias ln="command ln -v"


alias xargs="command xargs -t"

alias nv="nvim"
alias neov="neovide"
alias py="/usr/bin/python3.12"
alias nf="neofetch"
alias btop="/usr/bin/btop --utf-force"
alias k.="kitty . & && disown"
alias yarn="yarn --use-yarnrc $XDG_CONFIG_HOME/yarn/config"
alias nmcli="nmcli -p"
alias fzf="find . -type f | command fzf"

alias update="sudo pacman -Syu && paru -Syu"
alias pacinstall="sudo pacman -S"
alias aurinstall="paru -S"
alias cleanup="sudo pacman -Rns (pacman -Qtdq)"

alias startx="/usr/bin/startx $XINITRC"
